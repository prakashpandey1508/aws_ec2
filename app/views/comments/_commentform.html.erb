<h1>Make Comments<i class="fa fa-comments" style="font-size:48px;color:red"></i> </h2>

<%= form_for [@commentable, @comment] do |f| %>
  <div class="form-group">
    <%= f.text_field :content, class: 'form-control  placeholder="Type comment..."' %>
  </div>
  <%= f.submit "Save Comment", class: 'btn btn-primary' %>
<% end %>