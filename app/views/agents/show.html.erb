

<h1 style="text-align:center;color:green;">
            Agent Profile 
        </h1>
<div class="container">
    <div class="main-body">
    
          
          <!-- /Breadcrumb -->
    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4><%=@agent.name %></h4>
                      <p class="text-secondary mb-1">Regular Visitor</p>
                      <p class="text-muted font-size-sm"><%= @agent.address %></p>
                      <% if agent_signed_in?%>
                     <%= button_to 'remove',agent_path(@agent.id),method:'delete',data:"are you confirm" %>
                     <%end%>
                    </div>
              
                  </div>
                </div>
              </div>
              <div class="card mt-3">
                <ul class="list-group list-group-flush">
                  
                  
                  
                  
                  
               
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @agent.name %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @agent.email %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%=@agent.number %>
                    </div>
                  </div>
                  <hr>
                 
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @agent.address %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      
                      <!-- <%= link_to "edit",  edit_agent_registration_path ,class:"btn btn-success" %> -->
                      <%= link_to "Show Property",  root_path ,class:"btn btn-success", style: "text-decoration: none;" %>
                      <%if agent_signed_in?%>
                      <%= link_to "Show Appointments",  appointments_path,class:"btn btn-success" , style: "text-decoration: none;"%>
                      <%end%>
                      
                    </div>
                  </div>
                </div>
              </div>

              <div class="row gutters-sm">
               
                    </div>
                  </div>
                </div>
                <div class="col-sm-6 mb-3">
                  
                    </div>
                  </div>
                </div>
              </div>



            </div>
          </div>

        </div>
    </div>


 

