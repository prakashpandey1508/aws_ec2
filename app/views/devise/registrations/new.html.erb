<div class="container d-flex justify-content-center my-5">
  <div class="row my-2 mx-2 main">
    <!--left-column-->
    <div class="col-md-4 col-12 mycol">
      <!--image-->
      <img src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1073&q=80"class ="devise-img">
    </div>
    <!--right-column-->
    <div class="col-md-8 col-12 xcol">
      <h2 class="title pt-5 pb-3">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <form class="myform">
          <div class="row rone">
            <div class="form-group col-md-6 fone py-3">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "First name" %>
            </div>
             <div class="form-group col-md-6 fone py-3">
              <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control", placeholder: "address" %>
            </div>
          
          </div>
          <div class="row rtwo">
            <div class="form-group col-md-6 fthree py-3">
              <%= f.text_field :number, autofocus: true, autocomplete: "tel", class: "form-control jk", placeholder: "Phone" %>
            </div>
            <div class="form-group col-md-6 ffour py-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control lm", placeholder: "knwst@gmail.com" %>
            </div>
          </div>
          <div class="row rthree">
            <div class="form-group col-md-6 ffive py-3">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
            </div>
            <div class="form-group col-md-6 fsix py-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
            </div>
          </div>
           <% if resource_name== :agent%>
        <%= collection_select(:agent,:company_id,Company.all,:id,:name,{:prompt   => "Select a Company"}, { class: "form-control" })%>
        <% end %>
          <div class="row rfour">
            <div class="form-group col-md-6 fseven py-3">
              <%= f.submit "Create account", class: "btn btn-primary" %>
            </div>
            <div class="form-group col-md-6 feight py-3">
              <p class="text-muted">Already have an account?<br><%= link_to "Sign in", new_session_path(resource_name) %></p>
            </div>
          </div>
        </form>
       
        <% end %>
    </div>
  </div>
</div>

