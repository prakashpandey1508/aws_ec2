<div class="container d-flex justify-content-center my-5">
  <div class="row my-2 mx-2 main">
    <!--left-column-->
    <div class="col-md-4 col-12 mycol">
      <!--image-->
      <img src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1073&q=80"class ="devise-img">
    </div>
    <!--right-column-->
    <div class="col-md-8 col-12 xcol">
      <h2 class="title pt-5 pb-3">Login To Portal</h2>
      <%= form_for(resource, as: resource_name,  url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <form class="myform">
         
          <div class="row rtwo">
            
            <div class="form-group col-md-8 ffour py-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control lm", placeholder: "Email" %>
            </div>
          </div>
          <div class="row rthree">
            <div class="form-group col-md-8 ffive py-3">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
            </div>
            
          </div>
          
          <div class="row rfour">
            <div class="form-group col-md-6 fseven py-3">
              <%= f.submit "Login", class: "btn btn-primary" %>
            </div>
            <div class="form-group col-md-6 feight py-3">
              <p class="text-muted">Don`t have an account?<br><%= link_to "Sign Up", new_registration_path(resource_name) %></p>
            </div>
          </div>
        </form>
       
        <% end %>
    </div>
  </div>
</div>
